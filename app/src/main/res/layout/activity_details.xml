<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.details.DetailsActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="Title"
              android:textSize="18sp"
              android:id="@+id/activity_details_post_title"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="Post body"
              android:layout_marginTop="18dp"
              android:id="@+id/activity_details_post_body"/>

    <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="56dp"
                   android:layout_height="56dp"
                   android:id="@+id/activity_details_author_avatar"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="Author"
                  android:layout_marginTop="18dp"
                  android:layout_marginStart="18dp"
                  android:id="@+id/activity_details_author_name"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="18dp"
              tools:text="Comments"
              android:id="@+id/activity_details_comments_count"/>
</LinearLayout>